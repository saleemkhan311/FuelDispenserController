<UserControl
    x:Class="FuelDispenserController.Views.ListDetailsDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer
        Name="ForegroundElement"
        HorizontalAlignment="Stretch"
        VerticalScrollMode="Enabled"
        IsTabStop="True">
        <StackPanel HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
               
             <!--   <TextBlock
                    Margin="10"
                    VerticalAlignment="Center"
                    Text="User Managment" 
                    FontSize="25"
                    FontWeight="Bold"
                     />-->
            </StackPanel>
            <StackPanel Padding="0,15,0,0">

                <StackPanel Width="400" Height="600" Padding="20" Spacing="12"
            Background="White" CornerRadius="12" BorderBrush="LightGray" BorderThickness="1">

                    <TextBlock Text="Register New User" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBlock Text="Display Name"/>
                    <TextBox x:Name="DisplayNameTextBox" PlaceholderText="Enter full name"/>

                    <TextBlock Text="Username"/>
                    <TextBox x:Name="UsernameTextBox" PlaceholderText="Choose a username"/>

                    <TextBlock Text="Password"/>
                    <PasswordBox x:Name="PasswordBox" PlaceholderText="Enter password"/>

                    <TextBlock Text="Confirm Password"/>
                    <PasswordBox x:Name="ConfirmPasswordBox" PlaceholderText="Re-enter password"/>

                    <TextBlock Text="Profile Picture"/>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Image x:Name="ProfileImage" Width="64" Height="64" Stretch="UniformToFill" 
               Source="/Assets/DefaultAvatar.png" />
                        <Button Content="Upload" />
                    </StackPanel>

                    <Button Content="Register" Margin="0,20,0,0" Height="40" />
                </StackPanel>

            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
