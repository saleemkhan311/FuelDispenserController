<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="FuelDispenserController.LoginWindows"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FuelDispenserController"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="LoginWindows">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid HorizontalAlignment="Center">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Background="#1F2937" HorizontalAlignment="Center" VerticalAlignment="Center" Height="450" Width="350" CornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Text="Login Now"
                Style="{StaticResource TitleTextBlockStyle}"
                HorizontalAlignment="Center"
                Margin="0,40,0,60"/>

            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="20"
                Width="320"
                Height="300"
                Background="#1F2937" 
                CornerRadius="8">

                <TextBox
                    Header="Username"
                    PlaceholderText="Enter username" Name="UsernameTextBox" />

                <PasswordBox
                    Header="Password"
                    PlaceholderText="Enter password" Name="PasswordTextBox" />

                <Button
                    Content="Login"
                    HorizontalAlignment="Stretch"
                    Margin="0,16,0,0"
                    Background="#0D47A1"
                    Foreground="White"
                    FontWeight="Bold"
                    CornerRadius="5"
                    Click="LoginButton_Click" />

                    <TextBlock Text="Do you have an account?"
                        HorizontalAlignment="Center"
                        Foreground="Gray"
                        Margin="0,1,0,0"
                        TextWrapping="Wrap"
                        Name="StatusTextBlock"/>
            </StackPanel>
        </Grid>
        </StackPanel>
    </Grid>
</Window>
